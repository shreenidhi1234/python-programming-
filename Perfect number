#program to check whether the given number is perfect or not

def perf_num():

    n = int(input("enter the number:"))

    sum1 = 0

    for i in range(1,n):

        if(n%i==0):

            sum1 = sum1 + i

    if(n==sum1):

       print("it is perfect number")

    else:

       print("it is not a perfect number")

perf_num()
